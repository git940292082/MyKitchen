<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
	<RelativeLayout 
	    android:layout_below="@+id/tv_my_info_title_bar"
	    android:id="@+id/rl_my_info"
	    android:layout_width="match_parent"
	    android:layout_height="150dp"
	    android:background="@drawable/bg_my_info_title_bar">
	    
	   <sc.my.kitchen.ui.CircleImageView 
	       android:id="@+id/iv_my_info_head"
	       android:layout_width="90dp"
	       android:layout_height="90dp"
	       android:src="@drawable/bg_avatar"
	       android:layout_centerInParent="true"
	       /> 
	   
	   <TextView 
	       android:id="@+id/tv_my_info_head"
	       android:layout_below="@+id/iv_my_info_head"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="点击头像登录"
	       android:layout_centerHorizontal="true"
	       />
	    
	</RelativeLayout>
    
	<RelativeLayout 
	    android:layout_marginTop="30dp"
	    android:id="@+id/rl_info_my_remind"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_below="@+id/rl_my_info"
	    
	    >
	   
	    <ImageView 
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp"
	        android:id="@+id/iv_info_attention"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_my_info_attention"
	        />
	    
	    <TextView 
	        android:id="@+id/tv_info_remind"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="我的提醒"
	        android:textSize="18sp"
	        android:layout_toRightOf="@+id/iv_info_attention"
	        android:layout_marginLeft="20dp"
	        android:layout_centerVertical="true"
	        />
	    
	    <ImageView 
	        android:id="@+id/iv_attention_arrow"
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_info_arrow"
	        android:layout_marginRight="20dp"
	        android:layout_centerVertical="true"
	        />
	    
	</RelativeLayout>
	
	<TextView 
	    android:id="@+id/tv_info_divider"
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="#000000"
	    android:layout_below="@+id/rl_info_my_remind"
	    />
	
	<RelativeLayout 
	    android:layout_below="@+id/tv_info_divider"
	    android:layout_marginTop="10dp"
	    android:id="@+id/rl_info_my_collection"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    >
	   
	    <ImageView 
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp"
	        android:id="@+id/iv_info_collection"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_my_info_collection"
	        />
	    
	    <TextView 
	        android:id="@+id/tv_info_collection"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="我的收藏"
	        android:textSize="18sp"
	        android:layout_toRightOf="@+id/iv_info_collection"
	        android:layout_marginLeft="20dp"
	        android:layout_centerVertical="true"
	        />
	    
	    <ImageView 
	        android:id="@+id/iv_collection_arrow"
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_info_arrow"
	        android:layout_marginRight="20dp"
	        android:layout_centerVertical="true"
	        />
	    
	</RelativeLayout>
	
	<TextView 
	    android:id="@+id/tv_info_divider2"
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="#000000"
	    android:layout_below="@+id/rl_info_my_collection"
	    />
	
	<RelativeLayout 
	    android:layout_below="@+id/tv_info_divider2"
	    android:layout_marginTop="10dp"
	    android:id="@+id/rl_info_my_menu"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    >
	   
	    <ImageView 
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp"
	        android:id="@+id/iv_info_menu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_my_info_menu"
	        />
	    
	    <TextView 
	        android:id="@+id/tv_info_menu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="搜索附近美食"
	        android:textSize="18sp"
	        android:layout_toRightOf="@+id/iv_info_menu"
	        android:layout_marginLeft="20dp"
	        android:layout_centerVertical="true"
	        />
	    
	    <ImageView 
	        android:id="@+id/iv_menu_arrow"
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_info_arrow"
	        android:layout_marginRight="20dp"
	        android:layout_centerVertical="true"
	        />
	    
	</RelativeLayout>
	
	<TextView 
	    android:id="@+id/tv_info_divider3"
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="#000000"
	    android:layout_below="@+id/rl_info_my_menu"
	    />
	
	<RelativeLayout 
	    android:layout_below="@+id/tv_info_divider3"
	    android:layout_marginTop="10dp"
	    android:id="@+id/rl_info_my_invitation"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    >
	   
	    <ImageView 
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp"
	        android:id="@+id/iv_info_invitation"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_my_info_invitaion"
	        />
	    
	    <TextView 
	        android:id="@+id/tv_info_invitation"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="邀请好友"
	        android:textSize="18sp"
	        android:layout_toRightOf="@+id/iv_info_invitation"
	        android:layout_marginLeft="20dp"
	        android:layout_centerVertical="true"
	        />
	    
	    <ImageView 
	        android:id="@+id/iv_invitation_arrow"
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_info_arrow"
	        android:layout_marginRight="20dp"
	        android:layout_centerVertical="true"
	        />
	    
	</RelativeLayout>
	
	<TextView 
	    android:id="@+id/tv_info_divider4"
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="#000000"
	    android:layout_below="@+id/rl_info_my_invitation"
	    />
	
	<RelativeLayout 
	    android:layout_below="@+id/tv_info_divider4"
	    android:layout_marginTop="10dp"
	    android:id="@+id/rl_info_exit"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    >
	   
	    <ImageView 
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp"
	        android:id="@+id/iv_info_exit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_my_info_exit"
	        />
	    
	    <TextView 
	        android:id="@+id/tv_info_exit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="退出"
	        android:textSize="18sp"
	        android:layout_toRightOf="@+id/iv_info_exit"
	        android:layout_marginLeft="20dp"
	        android:layout_centerVertical="true"
	        />
	    
	    <ImageView 
	        android:id="@+id/iv_exit_arrow"
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_info_arrow"
	        android:layout_marginRight="20dp"
	        android:layout_centerVertical="true"
	        />
	    
	</RelativeLayout>
	
	<TextView 
	    android:id="@+id/tv_info_divider5"
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="#000000"
	    android:layout_below="@+id/rl_info_exit"
	    />
	
</RelativeLayout>
